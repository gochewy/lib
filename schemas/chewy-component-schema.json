{
  "type": "object",
  "properties": {
    "repository": { "type": "string", "format": "uri" },
    "name": { "type": "string" },
    "type": {
      "type": "string",
      "enum": ["infrastructure", "service", "source"]
    },
    "version": { "type": "string" },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "repository": { "type": "string" },
          "role": { "type": "string" },
          "version": { "type": "string", "default": "0.1.1-branch" }
        },
        "required": ["repository", "role"],
        "additionalProperties": false
      }
    },
    "config": { "type": "object", "additionalProperties": {} }
  },
  "required": ["repository", "name", "type", "version"],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}
